<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="false"
    tools:context=".Register">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Paso #5: Pago por servicio"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:background="@drawable/shape_step"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_payments"
                android:tint="@color/white"
                />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightPrimary"
                android:text="Selecciona tu plan de suscripcion"
                android:drawableLeft="@drawable/ic_info"
                android:drawableTint="@color/colorLightPrimary"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        app:cardCornerRadius="4dp"
                        app:contentPadding="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/precio1"
                                android:textAlignment="center"
                                android:textColor="@color/colorBueno"
                                android:textSize="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 Mes"
                                android:textAlignment="center"
                                android:textColor="@color/colorSecondaryText"
                                />
                            <RadioButton
                                android:id="@+id/rbPlan1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="4dp"
                        app:contentPadding="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/precio3"
                                android:textAlignment="center"
                                android:textColor="@color/colorBueno"
                                android:textSize="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 Meses"
                                android:textAlignment="center"
                                android:textColor="@color/colorSecondaryText"
                                />
                            <RadioButton
                                android:id="@+id/rbPlan2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        app:cardCornerRadius="4dp"
                        app:contentPadding="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/precio12"
                                android:textAlignment="center"
                                android:textColor="@color/colorBueno"
                                android:textSize="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="12 Meses"
                                android:textAlignment="center"
                                android:textColor="@color/colorSecondaryText"
                                />
                            <RadioButton
                                android:id="@+id/rbPlan3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

            </LinearLayout>

            <EditText
                android:layout_marginTop="12dp"
                android:id="@+id/input_cardnums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Tarjeta de Credito"
                android:textColorHint="#60FFFFFF"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_credit_card"
                android:drawablePadding="10dp"
                android:drawableTint="#60FFFFFF"
                android:inputType="numberSigned"
                />
            <EditText
                android:layout_marginTop="12dp"
                android:id="@+id/input_cardowner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Nombre de Propietario"
                android:textColorHint="#60FFFFFF"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:drawableTint="#60FFFFFF"
                android:inputType="numberSigned"
                />
            <EditText
                android:layout_marginTop="12dp"
                android:id="@+id/input_cardcvc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Codigo CVC"
                android:textColorHint="#60FFFFFF"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_credit_card"
                android:drawablePadding="10dp"
                android:drawableTint="#60FFFFFF"
                android:maxLength="4"
                android:inputType="numberSigned"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightPrimary"
                android:text="Fecha de vencimiento de tu tarjeta"
                />

            <LinearLayout
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_exp_month"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="Mes"
                    android:textColorHint="#60FFFFFF"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_date"
                    android:drawablePadding="10dp"
                    android:drawableTint="#60FFFFFF"
                    android:maxLength="2"
                    android:inputType="numberSigned"
                    android:layout_width="0dp" />
                <EditText
                    android:id="@+id/input_exp_year"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:hint="Año"
                    android:textColorHint="#60FFFFFF"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_date"
                    android:drawablePadding="10dp"
                    android:drawableTint="#60FFFFFF"
                    android:maxLength="4"
                    android:inputType="numberSigned"
                    android:layout_width="0dp" />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/step_four_error"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todos los campos son obligatorios!"
                android:textColor="@color/colorAccent"
                android:drawableLeft="@drawable/ic_warning"
                android:drawableTint="@color/colorAccent"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:visibility="invisible"
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabStep5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_arrow_next"
        android:tint="@color/white"
        />
</android.support.design.widget.CoordinatorLayout>